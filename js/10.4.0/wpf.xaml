<Window x:Class="YourNamespace.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:wpf="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WebView2 Layout" Height="600" Width="800">
    <Grid>
        <!-- 전체 레이아웃을 3행으로 구성: 상단 / 메인 / 하단 -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Top -->
            <RowDefinition Height="*"/>    <!-- Center -->
            <RowDefinition Height="Auto"/> <!-- Bottom -->
        </Grid.RowDefinitions>

        <!-- 상단 버튼 영역 -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Background="LightGray" Padding="5">
            <Button Content="Top Button 1" Margin="5"/>
            <Button Content="Top Button 2" Margin="5"/>
        </StackPanel>

        <!-- 중앙 영역: 좌 / 중 / 우 -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>   <!-- Left menu -->
                <ColumnDefinition Width="*"/>     <!-- Center WebView2 -->
                <ColumnDefinition Width="150"/>   <!-- Right menu -->
            </Grid.ColumnDefinitions>

            <!-- 왼쪽 메뉴 -->
            <StackPanel Grid.Column="0" Background="LightBlue" Padding="5">
                <TextBlock Text="Left Menu" FontWeight="Bold"/>
                <Button Content="Menu A" Margin="2"/>
                <Button Content="Menu B" Margin="2"/>
            </StackPanel>

            <!-- WebView2 중앙 -->
            <wpf:WebView2 Grid.Column="1" x:Name="webView" Source="https://www.example.com" />

            <!-- 오른쪽 메뉴 -->
            <StackPanel Grid.Column="2" Background="LightGreen" Padding="5">
                <TextBlock Text="Right Menu" FontWeight="Bold"/>
                <Button Content="Option 1" Margin="2"/>
                <Button Content="Option 2" Margin="2"/>
            </StackPanel>
        </Grid>

        <!-- 하단 버튼 영역 -->
        <StackPanel Orientation="Horizontal" Grid.Row="2" Background="LightGray" Padding="5">
            <Button Content="Bottom Button 1" Margin="5"/>
            <Button Content="Bottom Button 2" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
