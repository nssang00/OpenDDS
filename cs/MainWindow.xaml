<Window x:Class="DelayTestApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="WeakReferenceMessenger Delay Test" 
        Height="200" 
        Width="450">
    <Grid>
        <StackPanel Margin="20">
            
            <Button Content="Send Delay Test Message (Blocks UI)" 
                    Name="SendButton"
                    Click="SendButton_Click" 
                    Padding="10"
                    FontSize="16"
                    FontWeight="Bold"
                    Margin="0,0,0,15"/>

            <TextBlock Text="이 버튼을 누르면, 메시지 수신부에서 UI 스레드를 3초간 차단하여" 
                       TextWrapping="Wrap"
                       Margin="0,0,0,5"/>
            <TextBlock Text="애플리케이션 전체가 멈추는(Freeze) 현상이 발생합니다." 
                       TextWrapping="Wrap"
                       Foreground="Red"
                       FontWeight="SemiBold"/>
                       
        </StackPanel>
    </Grid>
</Window>
